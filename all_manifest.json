{
  "manifest_version": 3,
  "name": "VSCode-like Tab Navigation",
  "version": "1.0",
  "description": "Navigate tabs like in Visual Studio Code",
  "permissions": ["tabs", "commands"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "next-tab": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
      "description": "Go to next tab"
    },
    "previous-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+M"
      },
      "description": "Go to previous tab"
    },
    "show-tab-list": {
      "suggested_key": {
        "default": "Ctrl+P"
      },
      "description": "Show tab list"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ]
}